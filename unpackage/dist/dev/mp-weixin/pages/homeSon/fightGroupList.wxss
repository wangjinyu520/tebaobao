.list-nav {
  position: fixed;
  left: 0;
  z-index: 11;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 0;
  white-space: nowrap;
  background: #fff;
}
.list-nav ._span.active {
  color: #333;
  color: #FA3F3F;
}
.list-nav ._span.active::after {
  background: #FA3F3F;
}
.list-nav ._span {
  display: inline-block;
  position: relative;
  margin-right: 33rpx;
  font-size: 30rpx;
  color: #333333;
}
.list-nav ._span::after {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 42rpx;
  height: 4rpx;
  background: transparent;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  content: '';
}
.list-nav ._span:first-child {
  margin-left: 30rpx;
}
.list-nav ._span:last-child {
  margin-right: 30rpx;
}
