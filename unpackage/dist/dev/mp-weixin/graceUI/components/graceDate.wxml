<block wx:if="{{show}}"><view class="grace-date"><view class="grace-date-header"><view data-event-opts="{{[['tap',[['prevMonth',['$event']]]]]}}" class="grace-date-header-btn" bindtap="__e"><text class="grace-iconfont icon-arrow-left"></text></view><view class="grace-date-header-date">{{cYear+"年"+cMonth+"月"}}</view><view data-event-opts="{{[['tap',[['nextMonth',['$event']]]]]}}" class="grace-date-header-btn" bindtap="__e"><text class="grace-iconfont icon-arrow-right"></text></view></view><view class="grace-date-week"><block wx:for="{{weeks}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view>{{item}}</view></block></view><view class="grace-date-days"><block wx:for="{{days}}" wx:for-item="itemList" wx:for-index="index2" wx:key="index2"><view class="{{['items',currentDay==cYear+'-'+cMonth+'-'+itemList.date?'current':'',itemList.isselect?'current':'']}}" style="{{'background:'+(itemList==''?'none':'')+';'}}" data-date="{{cYear+'-'+cMonth+'-'+itemList.date}}" data-event-opts="{{[['tap',[['gracClick',['$0','$1'],[[['days','',index2,'date']],[['days','',index2,'isselect']]]]]]]}}" bindtap="__e"><view class="grace-date-day">{{(itemList.date?itemList.date:'')+''}}</view><view class="grace-date-nl">{{itemList.nl?itemList.nl:''}}</view></view></block></view><block wx:if="{{isTime}}"><view><view class="grace-date-time-title">时间</view><view class="grace-date-time"><view class="timer"><picker mode="selector" range="{{hours}}" data-event-opts="{{[['change',[['hourChange',['$event']]]]]}}" bindchange="__e"><view>{{hours[currentHourD]}}</view></picker></view><view class="timer-spliter">:</view><view class="timer"><picker mode="selector" range="{{minutes}}" data-event-opts="{{[['change',[['minuteChange',['$event']]]]]}}" bindchange="__e"><view>{{minutes[currenMinuteD]}}</view></picker></view></view><view class="grace-date-btn"><button type="primary" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" bindtap="__e">确定</button></view></view></block></view></block>