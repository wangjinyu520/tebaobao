page {
  background: #F7F7F7;
}
.tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  text-align: center;
  color: #333;
  background: #fff;
}
.tab ._span {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.tab ._span.active {
  color: #FA3F3F;
}
.tab ._span.active::before {
  background: #FA3F3F;
}
.tab ._span::before {
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  width: 50rpx;
  height: 6rpx;
  border-radius: 3rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: transparent;
  content: ' ';
}
.tab-content {
  padding-top: 100rpx;
}
.tab-content .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 118rpx;
  margin-top: 16rpx;
  padding: 0 24rpx;
  background: #fff;
}
.tab-content .item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.tab-content .item .tab-item__right {
  color: #666;
  font-size: 26rpx;
}
.tab-content .item .tab-item__right ._h2 {
  margin-bottom: 18rpx;
  font-size: 32rpx;
  color: #333;
}
.tab-content .item .tab-item__right ._span {
  display: inline-block;
  padding-left: 20rpx;
}
.tab-content .item .item-time {
  font-size: 26rpx;
  color: #999;
}

