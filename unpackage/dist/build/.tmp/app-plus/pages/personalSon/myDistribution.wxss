page {
  padding-top: 70rpx;
  background: #F7F7F7;
}
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
}
.userinfo {
  position: relative;
  z-index: 11;
  margin: 0 24rpx 0;
  padding: 48rpx 0 32rpx 30rpx;
  border-radius: 10rpx;
  background: #fff;
}
.userinfo .userinfo-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 40rpx;
}
.userinfo .userinfo-header image {
  width: 136rpx;
  height: 136rpx;
  margin-right: 42rpx;
  border-radius: 50%;
}
.userinfo .userinfo-header .userinfo-header__top {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #999999;
  font-size: 26rpx;
}
.userinfo .userinfo-header .userinfo-header__top ._h2 {
  margin-bottom: 20rpx;
  color: #333;
  font-size: 34rpx;
}
.userinfo .userinfo-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.userinfo .userinfo-bottom .userinfo-bottom__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
}
.userinfo .userinfo-bottom .userinfo-bottom__item ._h3 {
  margin-bottom: 11rpx;
  color: #333333;
  font-size: 34rpx;
}
.withdraw {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 700rpx;
  height: 172rpx;
  margin: 20rpx auto;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 10rpx;
}
.withdraw .withdraw-left {
  font-size: 26rpx;
  color: #666666;
}
.withdraw .withdraw-left ._h2 {
  margin-bottom: 16rpx;
  color: #DFBF8D;
  font-size: 46rpx;
}
.withdraw .withdraw-btn {
  width: 136rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  background: #dfbf8d;
  border-radius: 30rpx;
  color: #fff;
}
.list {
  width: 700rpx;
  margin: 0 auto;
  padding: 32rpx 0 32rpx 0;
  font-size: 0;
  background: #fff;
  border-radius: 10rpx;
}
.list .item:nth-of-type(3) {
  margin-right: 0;
}
.list .item:nth-of-type(n + 4) {
  margin-top: 40rpx;
}
.list .item {
  display: inline-block;
  width: 33%;
  text-align: center;
  vertical-align: top;
}
.list .item image {
  width: 60rpx;
  height: 60rpx;
}
.list .item ._h2 {
  margin: 16rpx 0 13rpx 0;
  font-size: 24rpx;
  color: #333;
}
.list .item ._span {
  color: #FA3E3F;
  font-size: 38rpx;
}

