.live-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 24rpx;
  color: #333;
  font-size: 30rpx;
  border-bottom: 16rpx solid #f4f4f4;
  background: #fff;
}
.live-header .cover {
    position: relative;
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}
.live-header .cover ._span {
      display: inline-block;
      width: 128rpx;
      height: 128rpx;
      border-radius: 50%;
      background: #eee;
}
.live-header .cover ._i {
      position: absolute;
      left: 50%;
      top: 50%;
      z-index: 1;
      color: #FCCB59;
      font-size: 44rpx;
      -webkit-transform: translate(-50%, -50%);
              transform: translate(-50%, -50%);
}
.live-header .cover image {
      width: 128rpx;
      height: 128rpx;
      border-radius: 50%;
}
.live-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 104rpx;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #eee;
}
.live-item .right {
    color: #999;
}
.live-content {
  margin-top: 40rpx;
}
.live-content .live-content__item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin-bottom: 16rpx;
    padding-left: 24rpx;
    color: #999;
    font-size: 24rpx;
}
.live-content .live-content__item image {
      width: 23rpx;
      height: 23rpx;
      margin-right: 8rpx;
}
.live-btn {
  position: fixed;
  bottom: 122rpx;
  left: 0;
  width: 702rpx;
  height: 88rpx;
  margin: 0 24rpx;
  line-height: 88rpx;
  text-align: center;
