  /* 产生动画（向外扩散变大）的圆圈  */
.pulse {
    width: 160rpx;
    height: 160rpx;
    position: absolute;
    border: 12rpx solid #f44336;
    border-radius: 100%;
    z-index: 1;
    opacity: 0;
    -webkit-animation: warn 2s ease-out;
    animation: warn 2s ease-out;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    left: -28rpx;
    top: -28rpx;
}

  /**
  	 * 动画
  	 */
@-webkit-keyframes warn {
0% {
      -webkit-transform: scale(0);
              transform: scale(0);
      opacity: 0;
}
25% {
      -webkit-transform: scale(0);
              transform: scale(0);
      opacity: 0.1;
}
50% {
      -webkit-transform: scale(0.1);
              transform: scale(0.1);
      opacity: 0.3;
}
75% {
      -webkit-transform: scale(0.5);
              transform: scale(0.5);
      opacity: 0.5;
}
100% {
      -webkit-transform: scale(1);
              transform: scale(1);
      opacity: 0;
}
}
@keyframes warn {
0% {
      -webkit-transform: scale(0);
              transform: scale(0);
      opacity: 0;
}
25% {
      -webkit-transform: scale(0);
              transform: scale(0);
